<% layout("/layouts/boilerplate")-%>

<div class="row mt-3">
    <h3 class="col-6 offset-3">SignUp on WnaderLust</h3>
    <div class="col-6 offset-3">
        <form action="/signup" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" class="form-control" name="username" id="username" required>
                <div class="invalid-feedback">Oops! you did not enter valid input
                </div>  
                <div class="valid-feedback">Looks Good!
                </div>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" name="email" id="email" required>
                <div class="invalid-feedback">Oops! you did not enter valid email
                </div>  
                <div class="valid-feedback">Great!
                </div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">password</label>
                <input type="password" class="form-control" name="password" id="password" required>
 
 
            </div>
            <button>Signup</button>
        </form>
    </div>
</div>